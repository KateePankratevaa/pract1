<Window x:Class="WpfApp1.WrapPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="WrapPanel" Height="500" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="391*"/>
            <ColumnDefinition Width="9*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <Label Height="88">
                <Label Content="Наши проекты:" FontSize="15" Margin="30,10,10,10" Height="30" Width="120"/>
            </Label>
        </StackPanel>
        <WrapPanel Grid.ColumnSpan="2">
            <Button  Background="Blue"  Margin="40,50,10,10" Height="170" Width="170"  />
            <Button Background="Blue" Margin="40,50,10,10" Height="170" Width="170" />
            <Button Background="Blue" Margin="40,50,10,10" Height="170" Width="170" />
            <Button Background="Blue" Margin="40,10,10,10" Height="170" Width="170" />
            <Button Background="Blue" Margin="40,10,10,10" Height="170" Width="170" />
            <Button Background="Blue" Margin="40,10,10,10" Height="170" Width="170" />


        </WrapPanel>
    </Grid>
</Window>
