            <TextBox Height="50" Margin="40,-10,45,10" TextWrapping="Wrap" Background="Gray"/>
            <Label Content="Email:" FontSize="20" Margin="40,-10,10,10" Height="40"/>
            <TextBox Height="50" Margin="40,-10,45,10" TextWrapping="Wrap" Background="Gray"/>
            <Label Content="Телефон:" FontSize="20" Margin="40,-10,10,10" Height="40"/>
            <TextBox Height="50" Margin="40,-10,45,10" TextWrapping="Wrap" Background="Gray"/>

            <Button Content="Принять" FontSize="25" Height="50"  Margin="40,30,45,10"/>
        </StackPanel>
    </Grid>
</Window>
